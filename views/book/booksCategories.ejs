<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Categories</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: rgb(247, 242, 235);
            font-family: 'Arial', sans-serif; 
        }
        .category {
            cursor: pointer;
            transition: transform 0.2s;
        }
        .category:hover {
            transform: scale(1.05);
            background-color: #f8f9fa;
        }
    </style>
</head>
<body>
    <% if(user.type === 'employee') { %> <%-
        include('../partials/navbar-employee.ejs') %> <% } %> <% if(user.type ===
        'user') { %> <%- include('../partials/navbar-user.ejs') %> <% } %>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Book Categories</h1>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card category" onclick="location.href='/book/view-books'">
                    <div class="card-body text-center">
                        <h5 class="card-title">All</h5>
                    </div>
                </div>
            </div>
            <% bookCategories.forEach(function(category) { %>
                <div class="col-md-4 mb-4">
                    <div class="card category" style="background-color: <%= category.backgroundColor %>;" onclick="location.href='/book/view-books?category=<%= category.name %>'">
                        <div class="card-body text-center">
                            <h5 class="card-title"><%= category.name %></h5>
                        </div>
                    </div>
                </div>
            <% }); %>
    </div>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
